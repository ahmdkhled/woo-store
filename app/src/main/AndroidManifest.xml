<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.corenet.yohady">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/yohady2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/yohady2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.OrdersActivity"
            android:exported="true"/>
        <activity android:name=".ui.OrderSummaryActivity" />
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".ui.CheckoutActivity"
            android:exported="true" />
        <activity android:name=".ui.CategoriesActivity" />
        <activity
            android:name=".ui.ProductDetailActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name=".ui.ProductsActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.CartActivity"
            android:exported="true" />
        <activity android:name=".ui.ReviewActivity" />
    </application>

</manifest>