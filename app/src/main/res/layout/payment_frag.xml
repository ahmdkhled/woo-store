<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/couponCV"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/applyCoupon"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="have a promo code ?"
                android:inputType="text"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="apply"
                android:id="@+id/applyCoupon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#DA164D"
                android:textColor="#fff"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/deliveryoptionsCv"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/couponCV">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cashOndelivery"
                android:text="Cash on Delivery"
                android:textSize="20sp"
                android:textStyle="bold"
                android:checked="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="order will be delivered to your shipping address and money will be collected"
                app:layout_constraintTop_toBottomOf="@id/cashOndelivery"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/deliveryoptionsCv"
        android:id="@+id/totalCv"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="10dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_label"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Total: "
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="150 EGP"
                app:layout_constraintStart_toEndOf="@id/total_label"
                app:layout_constraintTop_toTopOf="@id/total_label"
                android:textSize="20sp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shipping_label"
                android:text="shipping: "
                app:layout_constraintTop_toBottomOf="@id/total_label"
                app:layout_constraintStart_toStartOf="@id/total_label"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 EGP"
                app:layout_constraintTop_toTopOf="@id/shipping_label"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/shipping_label"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/divider"
                app:layout_constraintTop_toBottomOf="@id/shipping_label"
                android:background="#F1EEEE"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subTotal_label"
                android:text="subtotal: "
                app:layout_constraintTop_toBottomOf="@id/divider"
                app:layout_constraintStart_toStartOf="@id/total_label"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="165 EGP"
                app:layout_constraintTop_toTopOf="@id/subTotal_label"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/shipping_label"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeOrder"
        android:background="@color/colorPrimary"
        android:text="place order"
        android:textColor="#fff"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/totalCv"
        android:layout_marginTop="15dp"/>

</android.support.constraint.ConstraintLayout>